<h1> Where would you like your food delivered? </h1>

  <h3> Please Choose an Address </h3>
<div class="row">
  <% @addresses.each do |a| %>

      <div class="col-sm-1 col-md-3 address_buttons">
         <%= a.street_address %>
         <%= a.city %>,
         <%= a.state %>
         <%= a.zip %>
         <%= form_tag user_online_orders_path(current_user), method: :post do %>
         <%= hidden_field_tag :address, a.id %>
           <%= button_tag(:class => "btn btn-primary btn-sm", :id => "cart_button") do %>
              Use This Address <span class="glyphicon glyphicon-shopping-cart" ></span>
           <% end %>
         <% end %>
         <br>
         <%= form_tag address_path(a), method: :delete do %>
         <%= hidden_field_tag :address, a.id %>
           <%= button_tag(:class => "btn btn-primary btn-sm", :id => "cart_button") do %>
              Delete Address <span class="glyphicon glyphicon-shopping-cart" ></span>
           <% end %>
         <% end %>
      </div>
    <%end%>

</div>



<%= form_tag new_address_path, method: :get do %>
  <%= button_tag(:class => "btn btn-success btn-lg", :id => "cart_button") do %>
    Enter a New Address <span class="glyphicon glyphicon-shopping-cart" ></span>
  <% end %>
<% end %>
