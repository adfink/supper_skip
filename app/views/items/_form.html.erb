<div class="thumbnail_index">

  <%= form_for ([@restaurant, @item]) do |f| %>

    <div class="field">

      <%= f.label :name %>
      <%= f.text_field :name %><br>

      <%= f.label :description %>
      <%= f.text_area :description %><br>

      <%= f.label :price %>
      <%= f.text_field :price %><br>

      <%= f.label :image, "Attach an Image" %>
      <%= f.file_field :image %> <br>

      <%#= f.label :status, 'Is Available?' %>
      <%#= f.check_box :status %><br>

      <%= f.label :category_ids, 'Categories' %><br/>
      <%= f.collection_check_boxes(:category_ids, @restaurant.categories.all, :id, :name) %><hr/>
    </div>

    <%= f.submit %>
  <% end %>
</div>
