<% if current_user && current_user.verify?("admin", @restaurant) %>
  <%= link_to "Edit Item", edit_restaurant_item_path(@restaurant, @item) %>
  <%= link_to "Delete Item", restaurant_item_path(@restaurant, @item), method: :delete %>
<% end %>

<div class="col-sm-4 col-md-8">
  <div class="thumbnail">
        <%= image_tag @item.image.url(:medium), {class: "menu_cart_img"} %>
        <!-- <img src="http://whatscookingamerica.net/History/RockyMtnOysters4.jpg" alt="Mountain View" style="width:auto;height:45%"> -->
    <div class="caption">
      <h4> <%= @item.name %> </h4>
      <p class="item_description"> <%= @item.description %> </p>
      <p class="item_description"> Price: <%= number_to_currency(@item.price) %> </p>
    </div>
    </div>
  </div>
</div>
