<div class="thumbnail_index">

  <%= form_for @restaurant do |f| %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %><br>

      <%= f.label :description %>
      <%= f.text_area :description %><br>

      <%= f.label :display_name %>
      <%= f.text_field :display_name %><br>
    </div>

    <%= f.submit %>
  <% end %>
</div>
