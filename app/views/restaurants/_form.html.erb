<div class="thumbnail">

  <%= form_for @restaurant do |f| %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :display_name %><br>
      <%= f.text_field :display_name %><hr/>
    </div><br>

    <%= f.submit %>
  <% end %>
</div>
