

<h1>Update your profile details</h1>
<%= render "layouts/errors", object: @user%>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@user) do |f| %>

      <%= f.label :full_name %>
      <%= f.text_field :full_name, :placeholder => @user.full_name, class: 'form-control' %><br>

      <%= f.label :email_address %>
      <%= f.email_field :email_address, :placeholder => @user.email_address, class: 'form-control' %><br>

      <%= f.label :new_password %>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.label :new_password_confirmation %><br>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br>

      <%= f.label :screen_name %>
      <%= f.text_field :screen_name, :placeholder => @user.screen_name, class: 'form-control' %><br>

      <%= f.label :phone %>
      <%= f.text_field :phone, :placeholder => @user.phone, class: 'form-control' %><br>

      <%= f.submit "Edit Account", class: "btn btn-primary" %>
    <% end %>
    <br>
    </div>
</div>
