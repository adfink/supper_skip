<h1>Create an Account!</h1>
<%= render "layouts/errors", object: @user%>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@user) do |f| %>

      <%= f.label :full_name %>
      <%= f.text_field :full_name, class: 'form-control' %><br>

      <%= f.label :email_address %>
      <%= f.email_field :email_address, class: 'form-control' %><br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %><br>

      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br>

      <%= f.label :screen_name %>
      <%= f.text_field :screen_name, class: 'form-control' %><br>

      <%= f.submit "Create Account", class: "btn btn-primary" %>
  <% end %>
  <br>

    <p>Already a User? <%= link_to "Log In!", login_path %></p>
  </div>
</div>

